@page
@model MedicineInventory.Pages.User.DashboardModel
@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>Welcome, @Model.Username!</h2>
        <p class="text-muted">Your activity overview and medicine alerts</p>
    </div>

    <h4>üîç Search Medicines</h4>
    <form method="get" class="form-inline mb-3">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name or manufacturer" class="form-control mr-2 w-50" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
    {
        if (Model.SearchResults.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Manufacturer</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model.SearchResults)
                        {
                            <tr>
                                <td>@med.Name</td>
                                <td>@med.Manufacturer</td>
                                <td>@med.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">No medicine found.</div>
        }
    }

    <div class="card border-info shadow-sm mt-4">
        <div class="card-header bg-info text-white">üìã All Medicines</div>
        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
            <table class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Manufacturer</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var med in Model.AllMedicines)
                    {
                        <tr>
                            <td>@med.Name</td>
                            <td>@med.Manufacturer</td>
                            <td>@med.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card border-danger shadow-sm mt-4">
        <div class="card-header bg-danger text-white">‚è∞ Expiring Soon (30 days)</div>
        <div class="card-body">
            @if (Model.ExpiringSoonMedicines.Count == 0)
            {
                <div class="alert alert-success">No upcoming expiries!</div>
            }
            else
            {
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Expiry</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model.ExpiringSoonMedicines)
                        {
                            <tr>
                                <td>@med.Name</td>
                                <td>@med.ExpiryDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
